<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uark.uarkregisterapp.CreateEmployeeViewActivity"
    tools:showIn="@layout/activity_create_employee_view">

        <EditText
            android:id="@+id/edit_text_employee_first_name"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="301dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="Enter First Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_text_employee_last_name"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="291dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_text_employee_first_name"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Enter Last Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_employee_first_name" />

        <EditText
            android:id="@+id/edit_text_employee_password"
            style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
            android:layout_width="292dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_text_employee_last_name"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_employee_last_name" />

        <Button
            android:id="@+id/createEmployeeSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/edit_text_employee_password"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="24dp"
            android:onClick="saveButtonOnClick"
            android:text="Create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
